import { ScrollView } from "std-widgets.slint";
import { CardGrid, CardGridAdapter } from "../components/card_grid.slint";
import { Texxt } from "../common.slint";

export component SearchResults inherits VerticalLayout {
    in-out property <CardGridAdapter> model;

    ScrollView {                        
        card-grid := CardGrid {
            cards: model.cards;
            parent-width: parent.width;
        }
    }
    Texxt {
        horizontal-alignment: right;
        text: model.cards.length + " items";
    }
}

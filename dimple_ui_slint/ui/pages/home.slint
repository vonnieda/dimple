import { ScrollView, VerticalBox } from "std-widgets.slint";
import { CardAdapter } from "../components/card.slint";
import { CardGrid, CardGridAdapter } from "../components/card_grid.slint";

export struct HomeAdapter {
    cards: [CardAdapter],
}

export component Home inherits VerticalBox {
    in-out property <HomeAdapter> model;

    Text {
        text: "Home";
        font-size: 3rem;
    }
    ScrollView {                        
        card-grid := CardGrid {
            cards: model.cards;
            parent-width: parent.width;
        }
    }
    Text {
        horizontal-alignment: right;
        text: model.cards.length + " items";
    }
}
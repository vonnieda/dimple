export component Home inherits ScrollView {
    horizontal-scrollbar-policy: always-off;

    VerticalBox {
        width: 100%;
        alignment: start;
        padding: 0;

        PageTitle {
            text: "Home";
        }

        for section in HomeAdapter.sections: VerticalBox {
            alignment: start;
            padding: 0;
            padding-bottom: 16px;
            VerticalLayout {
                HorizontalLayout {
                    alignment: start;
                    Link {
                        horizontal-stretch: 0;
                        name: section.title;
                        url: section.url;
                        font-size: Styles.default-font-size * 2;
                    }
                }
                if section.sub-title != "": SectionSubtitle {
                    text: section.sub-title;
                }
            }
            CardGrid {
                cards: section.cards;
                max-rows: 1;
            }
        }
    }
}
import { Slider } from "std-widgets.slint";
import { Palette } from "common.slint";

export component PlayerBar inherits Rectangle {
    in property <image> current-image;
    in property <string> current-title;
    in property <string> current-release;
    in property <string> current-artist;

    background: #ffffff69;
    border-radius: 10px;
    clip: true;
    HorizontalLayout {
        spacing: 10px;
        padding: 10px;

        Rectangle {
            width: img.width;
            height: img.height;
            border-radius: Palette.image-border-radius;
            clip: true;
            img := Image {
                source: @image-url("../images/dark.png");
                width: Palette.image-width-medium;
                height: Palette.image-width-medium;
            }    
        }
        Rectangle {
            horizontal-stretch: 1;
            clip: true;
            VerticalLayout {
                spacing: 2px;
                HorizontalLayout {
                    spacing: 2px;
                    Image {
                        source: @image-url("../icons/phosphor/SVGs/bold/music-notes-bold.svg");
                        height: 20px;
                        width: 20px;
                        
                    }
                    Text {
                        font-size: Palette.font-size-medium;
                        font-weight: Palette.font-weight-title;
                        color: Palette.text-color-title;
                        text: "Trap Party in the Trap House";
                        vertical-alignment: bottom;
                    }
                }
                HorizontalLayout {
                    spacing: 2px;
                    Image {
                        source: @image-url("../icons/phosphor/SVGs/regular/vinyl-record.svg");
                        height: 20px;
                        width: 20px;
                    }
                    Text {
                        font-size: Palette.font-size-medium;
                        font-weight: Palette.font-weight-sub-title;
                        color: Palette.text-color-sub-title;
                        text: "Trappin' in Kawaii 2023";
                        vertical-alignment: bottom;
                    }
                }
                HorizontalLayout {
                    spacing: 2px;
                    Image {
                        source: @image-url("../icons/phosphor/SVGs/regular/users-three.svg");
                        height: 20px;
                        width: 20px;
                    }
                    Text {
                        font-size: Palette.font-size-medium;
                        font-weight: Palette.font-weight-sub-title;
                        color: Palette.text-color-sub-title;
                        text: "Grid of Benjamins";
                        vertical-alignment: bottom;
                    }
                }
                Rectangle {
                    vertical-stretch: 1;
                }
                Slider { 
                    value: 42;
                }
                HorizontalLayout {
                    Text {
                        text: "09:30";
                        font-size: Palette.font-size-small;
                    }
                    Text {
                        horizontal-alignment: right;
                        text: "09:30";
                        font-size: Palette.font-size-small;
                    }
                }
            }
        }
        VerticalLayout {
            alignment: start;
            spacing: 2px;
            width: r.width * 1.5;
            HorizontalLayout {
                alignment: center;
                r := Rectangle {
                    width: img2.width;
                    height: img2.height;
                    border-radius: Palette.image-border-radius;
                    clip: true;
                    img2 := Image {
                        source: @image-url("../images/light.png");
                        width: Palette.image-width-small;
                        height: Palette.image-width-small;
                    }    
                }
            }
            Text {
                font-size: Palette.font-size-small;
                font-weight: Palette.font-weight-title;
                color: Palette.text-color-title;
                horizontal-alignment: center;
                text: "Finality Season";
                wrap: word-wrap;
            }
            Text {
                font-size: Palette.font-size-small;
                font-weight: Palette.font-weight-sub-title;
                color: Palette.text-color-sub-title;
                horizontal-alignment: center;
                text: "The Frigid Depths of the Heart of the Kit-Kat CEO";
                wrap: word-wrap;
            }
        }
    }
}


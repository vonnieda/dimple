import { Button, VerticalBox , ScrollView} from "std-widgets.slint";

export struct CardModel {
    image: image,
    title: string,
    // TODO eventually subtitles as they will all be links to artists.
    sub-title: string,
    url: string,
}

export component Card inherits VerticalLayout {
    width: 250px;
    spacing: 2px;

    in property <CardModel> model: {
        image: @image-url("../images/dark.png"),
        title: "A Reign of Fish",
        sub-title: "Fresh Pliers",
        url: "internal://1231792128374089732402",
    };

    callback image-clicked(CardModel);
    callback title-clicked(CardModel);
    callback sub-title-clicked(CardModel);

    alignment: start;

    image-area := TouchArea {
        width: root.width;
        height: 250px;
        mouse-cursor: pointer;
        clicked => { root.image-clicked(model); }
        Rectangle {
            width: 100%;
            height: 100%;
            border-radius: 5px;
            clip: true;
            Image {
                width: 100%;
                height: 100%;
                source: model.image;
            }    
        }
    }
    Rectangle {}
    title-area := TouchArea {
        mouse-cursor: pointer;
        clicked => { root.title-clicked(model); }
        title := Text {
            width: root.width;
            font-weight: 600;
            text: model.title;
            wrap: word-wrap;
        }
    }
    sub-title-area := TouchArea {
        mouse-cursor: pointer;
        clicked => { root.sub-title-clicked(model); }
        Text {
            width: root.width;
            text: model.sub-title;
            wrap: word-wrap;
        }
    }
}

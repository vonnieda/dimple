import { Button , LineEdit} from "std-widgets.slint";
export component NavBar inherits HorizontalLayout {
    callback navigate(string);

    spacing: 10px;
    Button {
        text: "Home";
        clicked => { root.navigate("dimple://home"); }
    }
    Button {
        text: "Releases";
        clicked => { root.navigate("dimple://releases"); }
    }
    Button {
        text: "Artists";
        clicked => { root.navigate("dimple://artists"); }
    }
    Button {
        text: "Genres";
        clicked => { root.navigate("dimple://genres"); }
    }
    LineEdit {
        horizontal-stretch: 1;
        placeholder-text: "What sounds good?";
        edited(query) => { root.navigate("dimple://search/" + query); }
    }
}

import { Button , LineEdit} from "std-widgets.slint";
import { Navigator } from "common.slint";

export component NavBar inherits HorizontalLayout {
    spacing: 10px;
    Button {
        text: "Home";
        clicked => { Navigator.navigate("dimple://home"); }
        primary: true;
    }
    Button {
        text: "Releases";
        clicked => { Navigator.navigate("dimple://releases"); }
    }
    Button {
        text: "Artists";
        clicked => { Navigator.navigate("dimple://artists"); }
    }
    Button {
        text: "Genres";
        clicked => { Navigator.navigate("dimple://genres"); }
    }
    LineEdit {
        horizontal-stretch: 1;
        placeholder-text: "What sounds good?";
        edited(query) => { Navigator.navigate("dimple://search/" + query); }
    }
}

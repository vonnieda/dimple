import { StyleMetrics } from "std-widgets.slint";

export global Palette  {
    in-out property<length> image-width-small: 70px;
    in-out property<length> image-width-medium: 120px;
    in-out property<length> image-width-large: 200px;
    in-out property<length> image-width-extra-large: 275px;
    in-out property<length> image-border-radius: 5px;
    in-out property<color> image-border-color: StyleMetrics.default-text-color;
    in-out property<length> image-border-width: 1px;
}

export global Navigator {
    callback navigate(string);
}

export struct Link {
    name: string,
    url: string,
}

export struct ImageLink {
    image: image,
    name: string,
    url: string,
}



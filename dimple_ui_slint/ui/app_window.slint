export { Navigator, Link, ImageLink, CardModel }

export component AppWindow inherits Window {
    in-out property <int> page: 1;
    // TODO Note to self: Currently you can't expose properties on
    // sub-components, so all this is needed.
    in-out property <[CardModel]> card-grid-cards;
    in-out property <ArtistDetailsModel> artist-details;
    in-out property <ReleaseGroupDetailsModel> release-group-details;
    in-out property <ReleaseDetailsModel> release-details;
    
    title: "Dimple";
    preferred-width: 1440px;
    preferred-height: 1024px;

    VerticalLayout {
        padding: StyleMetrics.layout-padding * 2;
        padding-top: 0px;
        GroupBox {
            vertical-stretch: 0;
            NavBar {  
                spacing: StyleMetrics.layout-spacing;
            }
        }
        if page == 0: GroupBox { 
            VerticalLayout {
                ScrollView {                        
                    card-grid := CardGrid {
                        cards: root.card-grid-cards;
                        parent-width: parent.width;
                    }
                }
                Text {
                    horizontal-alignment: right;
                    text: card-grid-cards.length + " items";
                }
            }
        }
        if page == 1: GroupBox {
            vertical-stretch: 1;
            ArtistDetails {  
                vertical-stretch: 1;
                model: root.artist-details;
            }                
        }
        if page == 2: GroupBox {
            vertical-stretch: 1;
            ReleaseGroupDetails {  
                vertical-stretch: 1;
                model: root.release-group-details;
            }                
        }
        if page == 3: GroupBox {
            vertical-stretch: 1;
            ReleaseDetails {  
                vertical-stretch: 1;
                model: root.release-details;
            }                
        }
        GroupBox {
            vertical-stretch: 0;
            PlayerBar { 
            }
        }
    }
}
